<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:backgroundTint="@android:color/holo_blue_light"
    android:layout_marginBottom="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageViewEstado"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/despejado"
            android:padding="10dp"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Despejado"
            android:id="@+id/textViewEstadoCielo"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageViewEstado"
            android:layout_alignBottom="@+id/imageViewEstado"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="25 de Noviembre"
            android:id="@+id/textViewFechaDia"
            android:gravity="center"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView8"
            android:src="@drawable/ic_temp_up"
            android:layout_below="@+id/imageViewEstado"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="15º"
            android:textSize="13dp"
            android:id="@+id/textViewTempMax"
            android:gravity="center"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_toEndOf="@+id/imageView8"
            android:layout_below="@+id/imageViewEstado" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView9"
            android:src="@drawable/ic_temp_down"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textViewTempMax" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="5º"
            android:textSize="13dp"
            android:id="@+id/textViewTempMin"
            android:gravity="center"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_toEndOf="@+id/imageView9"
            android:layout_below="@+id/textViewEstadoCielo" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView8"
            android:paddingLeft="25dp"
            android:layout_marginTop="-5dp"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sensación Máx "
                android:textSize="12dp"
                android:gravity="center"
                android:id="@+id/textView5"
                android:textColor="#be4d4d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="15º"
                android:maxWidth="30dp"
                android:minWidth="30dp"
                android:paddingLeft="5dp"
                android:textSize="13dp"
                android:id="@+id/textViewSensMax"
                android:gravity="center" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageView10"
                android:src="@drawable/ic_rain"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="5 %"
                android:textSize="13dp"
                android:id="@+id/textViewPrec"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:paddingLeft="25dp"
            android:layout_marginTop="-5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sensación Min "
                android:textSize="12dp"
                android:gravity="center"
                android:id="@+id/textView6"
                android:textColor="#6483c2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="5º"
                android:maxWidth="30dp"
                android:minWidth="30dp"
                android:paddingLeft="5dp"
                android:textSize="13dp"
                android:id="@+id/textViewSensMin"
                android:gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView11"
                android:src="@drawable/ic_son"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="300 m."
                android:textSize="13dp"
                android:id="@+id/textViewNev"
                android:gravity="center" />


        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
